<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="mobile.huaman.mutualmobile.view.MutualMobileActivity.MutualMobileMainActivity">

    <SearchView
        
        android:id="@+id/svSearchRecipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:foregroundGravity="right"
        android:gravity="right"
        android:queryHint="Search a recipe">

    </SearchView>

    <GridView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/gridView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:columnWidth="120dp"

        android:gravity="center"

        android:numColumns="auto_fit"
        android:stretchMode="spacingWidthUniform"></GridView>


</LinearLayout>
